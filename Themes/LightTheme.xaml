<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Color Scheme -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#000000"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="GroupBoxHeaderBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="NavigationActiveBrush" Color="#F5F5F8"/>
    <SolidColorBrush x:Key="NavigationHoverBrush" Color="#E8E8E8"/>
    
</ResourceDictionary>
