<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Color Scheme -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="GroupBoxHeaderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#4C4C4C"/>
    <SolidColorBrush x:Key="NavigationActiveBrush" Color="#353538"/>
    <SolidColorBrush x:Key="NavigationHoverBrush" Color="#3C3C3F"/>
    
</ResourceDictionary>
